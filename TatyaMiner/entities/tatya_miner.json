{
  "format_version": "1.21.131.1",
  "minecraft:entity": {
    "description": {
      "identifier": "tatya:miner",
      "is_spawnable": true,
      "is_summonable": true
    },

    "components": {
      // 1. Physical Presence & Gravity
      "minecraft:physics": {},
      "minecraft:collision_box": {
        "width": 0.6,
        "height": 1.8
      },

      // 2. Identity & Health
      "minecraft:type_family": {
        "family": ["tatya", "robot", "mob"]
      },
      "minecraft:nameable": {},
      "minecraft:health": {
        "value": 20,
        "max": 20
      },

      // 3. Movement & Intelligence
      "minecraft:movement": {
        "value": 0.25
      },
      "minecraft:navigation.walk": {
        "can_path_over_water": true,
        "avoid_damage_blocks": true
      },
      "minecraft:movement.basic": {},

      // 4. Ownership (Taming) - Use Iron Ingot to tame
      "minecraft:tameable": {
        "tame_items": [ "iron_ingot" ],
        "tame_event": {
          "event": "minecraft:on_tame",
          "target": "self"
        }
      },

      // 5. Storage (Inventory)
      "minecraft:inventory": {
        "inventory_size": 15,
        "container_type": "container",
        "private": false
      },

      // 6. AI Behaviors
      "minecraft:behavior.follow_owner": {
        "priority": 1,
        "speed_multiplier": 1.2,
        "start_distance": 5,
        "stop_distance": 2
      },

      "minecraft:behavior.break_block": {
        "priority": 2,
        "break_gradient": 1.0,
        "blocks": [
          "minecraft:stone",
          "minecraft:coal_ore",
          "minecraft:iron_ore",
          "minecraft:copper_ore",
          "minecraft:diamond_ore",
          "minecraft:deepslate"
        ]
      },

      "minecraft:behavior.random_stroll": {
        "priority": 3,
        "speed_multiplier": 1.0
      }
    }
  }
}

